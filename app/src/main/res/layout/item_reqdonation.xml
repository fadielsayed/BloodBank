<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="100dp"
    android:layoutDirection="ltr"
    android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            >

            <Button
                android:layout_height="40dp"
                android:layout_width="105dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text=" التفاصيل:   "
                android:id="@+id/detailrequest_ButtonID"/>
            <Button
                android:layout_height="40dp"
                android:layout_width="100dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text=" اتصال"
                android:background="@android:color/holo_green_dark"
                android:drawableLeft="@mipmap/call"
                android:paddingLeft="5dp"
                android:id="@+id/contact_Button"/>

        </LinearLayout>



        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:text="احمد محمد"
                    android:paddingRight="10dp"
                    android:id="@+id/donator_nameID"/>

                <TextView

                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:text="اسم الحاله:   "
                    android:id="@+id/donation_name"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:text=" المنصوره"
                    android:id="@+id/hospital_nameID"/>

                <TextView

                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:text="اسم المستشفى:   "
                    android:id="@+id/hospital_name"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:text=" المنصوره"
                    android:id="@+id/city_nameID"/>

                <TextView

                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:text=" المدينه:   "
                    android:paddingRight="10dp"
                    android:id="@+id/city_name"/>


            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="A+"
            android:textSize="30sp"
            android:gravity="center"
            android:id="@+id/text_bloodID"
            android:background="@drawable/round"
            />

    </LinearLayout>

