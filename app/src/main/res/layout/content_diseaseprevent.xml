<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".mainUIPK.Article_Detail.DiseasepreventActivity"
    tools:showIn="@layout/activity_diseaseprevent">


    <ImageView
        android:id="@+id/Image_detailID"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <TextView
        android:id="@+id/title_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="طريقه الوقليه من الامراض"
        android:textSize="15sp"
        android:textStyle="bold"
        />

            <RelativeLayout
                android:layout_marginLeft="12dp"
                android:layout_width="33dp"
                android:gravity="center"
                android:background="@drawable/circle_background"
                android:layout_height="33dp">

                <CheckBox
                    android:id="@+id/favDetailID"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/customcheckbox"
                    android:button="@null"
                    android:gravity="center"
                    android:layoutDirection="ltr" />
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/descriptionID"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/disease_activity_article"
        />

</LinearLayout>