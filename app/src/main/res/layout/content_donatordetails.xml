<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".mainUIPK.DonationDetail.DonatordetailsActivity"
    tools:showIn="@layout/activity_donatordetails"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            > </View>

        <TextView
            android:id="@+id/donatorname"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="احمد محمد"
            android:textSize="20sp"
            />


        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginRight="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الاسم : "
            android:textSize="20sp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            > </View>

        <TextView
            android:id="@+id/donatorage"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 21"
            android:textSize="20sp"
            />


        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginRight="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="العمر : "
            android:textSize="20sp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            > </View>

        <TextView
            android:id="@+id/donatorbloodkind"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" A+"
            android:textSize="20sp"
            />


        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginRight="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="فصيله الدم : "
            android:textSize="20sp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            > </View>

        <TextView
            android:id="@+id/donatorbloodBags"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 3 "
            android:textSize="20sp"
            />


        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginRight="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="عدد الاكياس المطلوبه : "
            android:textSize="20sp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            > </View>

        <TextView
            android:id="@+id/donatorhospital"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" الخير التخصصي"
            android:textSize="20sp"
            />


        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginRight="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المستشفى : "
            android:textSize="20sp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            > </View>

        <TextView
            android:id="@+id/donatorhospitalAdresse"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 21 شارع عبد العزيز بجوار المرور"
            android:textSize="20sp"
            />


        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginRight="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="عنوان المستشفى : "
            android:textSize="20sp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            > </View>

        <TextView
            android:id="@+id/donatorphone"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 0123456789"
            android:textSize="20sp"
            />


        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginRight="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="رقم الجوال : "
            android:textSize="20sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        >

        <View
            android:layout_width="50dp"
            android:layout_height="0dp"
            > </View>

        <TextView
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15sp"
            android:text=" التفاصيل "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/donatordetail"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_donator_detail"
            android:textSize="20sp"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/donatorimageID"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/friends"/>
    <Button
        android:id="@+id/donatorbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="اتصال"
        android:textColor="@color/colorAccent"
        android:background="@android:color/holo_green_light"
        android:textCursorDrawable="@mipmap/call"
        />

</LinearLayout>

</ScrollView>